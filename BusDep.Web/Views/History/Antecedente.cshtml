
@{
    Layout = null;
}

<div class="main-container">

    <div class="container">

        <div class="row">

            @Html.Partial("_Profile_Sidebar")

            <div class="col-sm-9 page-content">

                <div class="inner-box">

                    <h2 class="title-2"><i class="flagclubicon flag-{{antecedente.ClubLogo}} icon-th-thumb" title="Pais"></i> Agregar nuevo antecedente deportivo </h2>

                    <div id="accordion" class="panel-group">

                        <div class="panel panel-default">

                            <div class="panel-heading">

                                <h4 class="panel-title">
                                    <a href="#collapseB1" data-toggle="collapse">
                                        Información requerida
                                    </a>
                                </h4>

                            </div>

                            <div class="panel-collapse collapse in" id="collapseB1">

                                <div class="panel-body">

                                    <form class="form-horizontal" role="form" ng-submit="saveAntecedente()" promise-btn name="antecedenteForm">

                                        <div class="form-group">

                                            <label class="col-sm-3 control-label">¿En que club jugaste?</label>

                                            <div class="col-sm-9">

                                                <div class="" tabindex="0">

                                                    <select ng-model="antecedente.ClubLogo" class="form-control"
                                                            name="category" id="search-category" tabindex="-1"
                                                            ng-options="item.Code as item.Nombre for item in clubes">

                                                        <option value="" class="selecter-placeholder" selected=""> Seleccione un club</option>

                                                        <option value="Vehicles" style="background-color:#E9E9E9;font-weight:bold;" disabled="disabled">
                                                            - Clubes disponibles -
                                                        </option>

                                                    </select>

                                                </div>

                                            </div>

                                        </div>

                                        <div class="form-group">

                                            <label class="col-sm-3 control-label">Fecha inicio</label>

                                            <div class="col-sm-9 input-group date">
                                                <input datetimepicker type="text" class="form-control"
                                                       placeholder="¿Cuando comenzaste a jugar?" ng-model="antecedente.FechaInicio">
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Fecha fin</label>
                                            <div class="col-sm-9 input-group date">
                                                <input datetimepicker type="text" class="form-control"
                                                       placeholder="¿Cuando terminaste de jugar?" ng-model="antecedente.FechaFin">
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Goles</label>
                                            <div class="col-sm-9">
                                                <input type="number" class="form-control" placeholder="¿Cuantos goles anotaste?" ng-model="antecedente.Goles">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="Phone" class="col-sm-3 control-label">Partidos</label>
                                            <div class="col-sm-9">
                                                <input type="number" class="form-control" id="Phone" placeholder="¿Cuantos partidos jugaste?" ng-model="antecedente.Partidos">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Asistencias</label>
                                            <div class="col-sm-9">
                                                <input type="number" class="form-control" placeholder="¿Cuantas asistencias hiciste?" ng-model="antecedente.Asistencias">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Información</label>
                                            <div class="col-sm-9">
                                                <textarea ng-model="antecedente.Informacion" placeholder="Coloca cualquier información relevante de tu periodo." class="form-control" rows="4"></textarea>
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <div class="col-sm-offset-3 col-sm-9"></div>
                                        </div>

                                        <div class="form-group">

                                            <div class="col-sm-offset-3 col-sm-9">
                                                <a href="#!History/SportsHistory/List" class="btn btn-default">Volver</a>
                                                <button type="submit" class="btn btn-default page-action">Agregar</button>
                                            </div>

                                        </div>

                                    </form>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

</div>
