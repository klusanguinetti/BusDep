<!doctype html>

<html class="no-js" lang="en" data-ng-app="appBusDep">

<head>

    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Busqueda deportiva | Busqueda de jugadores profesionales</title>

    <link rel="icon" href="images/favicon.png">

    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.css">
    <link rel="stylesheet" type="text/css" href="~/Content/owl.theme.css">
    <link rel="stylesheet" type="text/css" href="~/Content/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/Content/please-wait.css">
    <link rel="stylesheet" type="text/css" href="~/Content/jquery.fs.scroller.css">
    <link rel="stylesheet" type="text/css" href="~/Content/jquery.fs.selecter.css">
    <link rel="stylesheet" type="text/css" href="~/Content/loading-bar.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/country-flags-icon.css">
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-datetimepicker.css">
    <link rel="stylesheet" type="text/css" href="~/Content/club-flags-icon.css">
    <link rel="stylesheet" type="text/css" href="~/Content/ui-carousel.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">

</head>

<body ng-init="user={authenticated:@Model.Authenticated,UserName:'@Model.UserName'}">

    <div id="wrapper">

        @Html.Partial("_Header")

        <div ng-view autoscroll="true">
          
        </div>

        @Html.Partial("_Footer")

        <script src="~/Scripts/vendor/jquery-1.10.2.min.js"></script>

        <script src="~/Scripts/vendor/bootstrap.js"></script>
        <script src="~/Scripts/vendor/please-wait.min.js"></script>
        <script src="~/Scripts/vendor/owl.carousel.min.js"></script>
        <script src="~/Scripts/vendor/moment.min.js"></script>
        <script src="~/Scripts/vendor/bootstrap-datetimepicker.min.js"></script>
        <script src="~/Scripts/vendor/jquery.matchHeight-min.js"></script>
        <script src="~/Scripts/vendor/hideMaxListItem.js"></script>
        <script src="~/Scripts/vendor/jquery.fs.scroller.js"></script>

        <script type="text/javascript">
            var loading_screen = pleaseWait({

            logo: "./Content/img/Logo250.png",
            backgroundColor: '#20a759',
            loadingHtml: '<div class="spinner"><div class="double-bounce1"></div><div class="double-bounce2"></div></div>'
            });

            setInterval(function () { loading_screen.finish(); }, 3000);

        </script>

        <script src="~/Scripts/vendor/angular.js"></script>
        <script src="~/Scripts/vendor/angular-route.js"></script>
        <script src="~/Scripts/vendor/angular-messages.js"></script>
        <script src="~/Scripts/vendor/loading-bar.min.js"></script>
        <script src="~/Scripts/vendor/angular-local-storage.min.js"></script>
        <script src="~/Scripts/vendor/ui-carousel.min.js"></script>

        <!-- Angular app -->

        <script src="~/Scripts/app/app.js"></script>
        <script src="~/Scripts/app/app-routes.js"></script>

        <script src="~/Scripts/app/components/account/loginController.js"></script>
        <script src="~/Scripts/app/components/account/registerController.js"></script>

        <script src="~/Scripts/app/components/index/indexController.js"></script>

        <script src="~/Scripts/app/components/privateProfile/privateProfileController.js"></script>
        <script src="~/Scripts/app/components/privateProfile/privateProfileService.js"></script>

        <script src="~/Scripts/app/components/publicProfile/publicProfileController.js"></script>

        <script src="~/Scripts/app/components/search/searchController.js"></script>

        <script src="~/Scripts/app/shared/directives/datetimepicker.js"></script>

        <script src="~/Scripts/app/shared/factories/authInterceptorService.js"></script>

        <script src="~/Scripts/app/shared/factories/authService.js"></script>

    </div>

</body>

</html>

