<div ng-controller="indexController">

    <div class="intro jobs-intro hasOverly" style="background-image: url(/Content/img/slide_1.jpg); background-position: center center;"
         data-ng-hide="!user.authenticated">

        <div class="dtable hw100">

            <div class="dtable-cell hw100">

                <div class="container text-center">

                    <h1 class="intro-title animated fadeInDown"> Encuentra un nuevo club </h1>

                    <p class="sub animateme fittext3 animated fadeIn"> La forma mas rapida de encontrar un club, intermediario o un jugador </p>

                    <div class="row search-row animated fadeInUp">

                        <form ng-submit="search();">

                            <div class="col-lg-9 col-sm-9 search-col relative">
                                <i class="icon-user icon-append"></i>
                                <input type="text" name="player_search" class="form-control has-icon" ng-model="searchValue"
                                       placeholder="Escribe lo que quieras sobre el jugador que quieres encontrar" value="">
                            </div>

                            <div class="col-lg-3 col-sm-3 search-col">
                                <button class="btn btn-primary btn-search btn-block" type="submit">
                                    <i class="icon-search"></i><strong>
                                        Encontrar
                                    </strong>
                                </button>
                            </div>

                        </form>

                    </div>

                    <div class="resume-up">
                        <a>
                            <i class="icon-doc-4"></i>
                        </a>
                        <a href="#!Profile/PrivateProfile"><b>Carga tu perfil</b></a> y encuentra facilmente lo que buscas.
                    </div>

                </div>
            </div>
        </div>

    </div>

    <div data-ng-hide="user.authenticated">

        <carousel interval="myInterval">
            <slide ng-repeat="slide in slides" active="slide.active">
                <a href="#!/Account/Register">
                    <img ng-src="{{slide.image}}" class="image">
                </a>
                <div class="carousel-caption">

                </div>
            </slide>
        </carousel>

    </div>




<div class="main-container">

    <div class="container">

        <div style="clear: both"></div>

        <div class="row">

            <div class="col-sm-{{user.authenticated?'12':'9'}} page-content col-thin-right">

                <div class="content-box col-lg-12">

                    <div class="row row-featured row-featured-category">

                        <div class="col-lg-12  box-title no-border">
                            <div class="inner">
                                <h2>
                                    <span>Ultimos perfiles</span>
                                    Registrados <a ng-href="{{user.authenticated?'#!/Search/':'#!/Account/Register'}}" class="sell-your-item"> {{user.authenticated?'Ver todos los perfiles':'QUIERO DARME DE ALTA'}} <i class="icon-th-list"></i> </a>
                                </h2>
                            </div>
                        </div>

                        <div class="adds-wrapper jobs-list">
                            <div class="item-list" ng-repeat="item in searchResult">
                                @Html.Partial("_Jugador_Item")
                            </div>
                        </div>

                        <div class="tab-box  save-search-bar text-center"><a class="text-uppercase" ng-href="{{user.authenticated?'#!/Search/':'#!/Account/Register'}}"> <i class="icon-briefcase "></i> Ver todos los perfiles </a>
                        </div>

                    </div>

                </div>

            </div>

            <div class="col-sm-3 page-sidebar col-thin-left" ng-show="!user.authenticated">

                <aside>
                    <div class="col-md-12 reg-sidebar">
