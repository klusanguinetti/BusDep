@{
    Layout = null;
}

<div class="main-container" ng-controller="loginController">
    <div class="container">
        <div class="row">
            <div class="col-sm-5 login-box">
                <div class="panel panel-default">
                    <div class="panel-intro text-center">
                        <img alt="img" class="img-responsive" src="~/Content/img/Logo250.png" style="display: inline;"> 
                    </div>
                    <div class="panel-body">
                        <form role="form">
                            <div class="form-group">
                                <label for="sender-email" class="control-label">Email:</label>
                                <div class="input-icon">
                                    <i class="icon-user fa"></i>
                                    <input id="sender-email" type="text" placeholder="Email" class="form-control email" data-ng-model="loginData.mail" required autofocus>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="user-pass" class="control-label">Contraseña:</label>
                                <div class="input-icon">
                                    <i class="icon-lock fa"></i>
                                    <input type="password" class="form-control" placeholder="Contraseña" required id="user-pass" data-ng-model="loginData.password">
                                </div>
                            </div>
                            <div class="form-group">
                                <a data-ng-click="login()" class="btn btn-primary  btn-block">Iniciar sesión</a>
                            </div>
                        </form>

                        <div data-ng-hide="message == ''" data-ng-class="(savedSuccessfully) ? 'alert alert-success' : 'alert alert-danger'">
                            {{message}}
                        </div>

                    </div>
                    <div class="panel-footer">
                        <div class="checkbox pull-left">
                            <label>
                                <input type="checkbox" value="1" name="remember" id="remember"> Mantener sesión iniciada
                            </label>
                        </div>
                        <p class="text-center pull-right">
                            <a href="forgot-password.html"> ¿Olvidaste tu contraseña? </a>
                        </p>
                        <div style=" clear:both"></div>
                    </div>
                </div>
                <div class="login-box-btm text-center">
                    <p>
                        ¿No tienes una cuenta aun? <br>
                        <a href="job-signup.html"><strong>¡Quiero Registrarme!</strong> </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
