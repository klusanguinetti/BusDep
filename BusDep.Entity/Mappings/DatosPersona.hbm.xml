<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="BusDep.Entity.DatosPersona, BusDep.Entity" table="DatosPersona" lazy="true">
    <id name="Id" column="DatosPersonaId" type="System.Int64" unsaved-value="0" >
      <generator class="native" />
    </id>
    <property name="Apellido" column="Apellido" type="System.String" length="200" />
    <property name="Calle" column="Calle" type="System.String" length="400" />
    <property name="Ciudad" column="Ciudad" type="System.String" length="100" />
    <property name="CodigoPostal" column="CodigoPostal" type="System.String" length="10" />
    <property name="FechaNacimiento" column="FechaNacimiento" type="System.DateTime"  />
    <property name="Nacionalidad" column="Nacionalidad" type="System.String" length="100" />
    <property name="Nacionalidad1" column="Nacionalidad1" type="System.String" length="100" />
    <property name="NacionalidadIso" column="NacionalidadIso" type="System.String" length="100" />
    <property name="NacionalidadIso1" column="NacionalidadIso1" type="System.String" length="100" />
    <property name="Nombre" column="Nombre" type="System.String" length="400" />
    <property name="Numero" column="Numero" type="System.String" length="200" />
    <property name="NumeroDocumento" column="NumeroDocumento" type="System.String" length="60" />
    <property name="Pais" column="Pais" type="System.String" length="100" />
    <property name="PaisIso" column="PaisIso" type="System.String" length="100" />
    <property name="Provincia" column="Provincia" type="System.String" length="30" />
    <property name="Telefono" column="Telefono" type="System.String" length="20" />
    <property name="TipoDocumento" column="TipoDocumento" type="System.String" length="100" />
    <property name="Informacion" column="Informacion" type="System.String" length="4000" />
    <many-to-one name="Usuario" unique="true" column="UsuarioId" class="BusDep.Entity.Usuario, BusDep.Entity"/>
  </class>
</hibernate-mapping>
<!--Importante: Asignar el not-null=true que corresponda.-->


