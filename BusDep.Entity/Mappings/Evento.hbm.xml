<?xml version="1.0" encoding="utf-8" ?>
	<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
		<class name="BusDep.Entity.Evento, BusDep.Entity" table="Evento" lazy="false"> 
			<id name="Id" column="EventoId" type="System.Int64" unsaved-value="0" >
				<generator class="native" />
			</id>
			<property name="Calle" column="Calle" type="System.String" length="800" />
			<property name="Ciudad" column="Ciudad" type="System.String" length="400" />
			<property name="Descripcion" column="Descripcion" type="System.String" length="4000" />
			<property name="FechaFin" column="FechaFin" type="System.DateTime"  />
			<property name="FechaInicio" column="FechaInicio" type="System.DateTime"  />
			<property name="Logo" column="Logo" type="System.String" length="400" />
			<property name="PaginaWeb" column="PaginaWeb" type="System.String" length="800" />
			<property name="Pais" column="Pais" type="System.String" length="400" />
			<property name="Provincia" column="Provincia" type="System.String" length="400" />
			<many-to-one name="TipoEvento" column="TipoEventoId" cascade="none" class="BusDep.Entity.TipoEvento, BusDep.Entity" />
			<property name="Titulo" column="Titulo" type="System.String" length="400" />
      <bag name="Participaciones" table="Participacion" cascade="all" inverse="true">
        <key column="EventoId" />
        <one-to-many class="BusDep.Entity.Participacion, BusDep.Entity" />
      </bag>
		</class>
	</hibernate-mapping>
<!--Importante: Asignar el not-null=true que corresponda.-->