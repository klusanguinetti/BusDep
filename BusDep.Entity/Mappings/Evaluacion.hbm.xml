<?xml version="1.0" encoding="utf-8" ?>
	<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
		<class name="BusDep.Entity.Evaluacion, BusDep.Entity" table="Evaluacion" lazy="false"> 
			<id name="Id" column="EvaluacionId" type="System.Int64" unsaved-value="0" >
				<generator class="native" />
			</id>
			<many-to-one name="Certificacion" column="CertificacionId" cascade="none" class="BusDep.Entity.Certificacion, BusDep.Entity" />
			<property name="PuntuacionGeneral" column="PuntuacionGeneral" type="System.Decimal"  />
			<property name="TipoEvaluacion" column="TipoEvaluacion" type="System.Int64"  />
			<many-to-one name="Usuario" column="UsuarioId" cascade="none" class="BusDep.Entity.Usuario, BusDep.Entity" />
      <bag name="Criterios" table="EvaluacionCriterio" cascade="all" inverse="true">
        <key column="EvaluacionId" />
        <one-to-many class="BusDep.Entity.EvaluacionCriterio, BusDep.Entity" />
      </bag>
		</class>
	</hibernate-mapping>
